---
import Logo from "../../icons/logo.astro";
const menuItems = [
  { label: 'Inicio', href: '/' },
  { label: 'Torneos', href: '/torneos' },
  { label: 'Nosotros', href: '#nosotros' },
  { label: 'Servicios', href: '#servicios' },
  { label: 'Contacto', href: '#contacto' },
];
---
<header class="bg-stone-50 text-black dark:bg-slate-800 w-full py-4 px-6 fixed top-0 z-50 shadow-md">
  <div class="max-w-7xl mx-auto flex justify-between items-center">

    <!-- Logo -->
    <div class="flex items-center  gap-3 ml-3 lg:absolute lg:left-0">
      <!-- <img src="/logo-pitchcore.svg" alt="Logo PitchCore" class="h-10 w-auto" /> -->
      <Logo class="size-10"/>
      <span class=" text-orange-600 text-lg font-bold md:mr-2">FUTMANAGER</span>
    </div>

    <!-- Desktop Navigation -->
    <nav class="hidden md:flex  flex-row mx-auto gap-x-14 opacity-90 text-base font-medium">
      {menuItems.map(item => (
        <a 
          href={item.href} 
          class="text-gray-700 hover:text-orange-700 transition-colors dark:text-slate-50 dark:hover:text-blue-500"
        >
          {item.label}
        </a>
      ))}
    </nav>

   <!-- Botones -->
<div class="hidden md:flex items-center gap-3 ml-3 lg:absolute lg:right-0">
  <div class="flex justify-center gap-4 mr-2">
    <a 
      href="/login" 
      class="px-3 py-2 md:px-4 md:py-2 lg:px-5 lg:py-2 text-sm md:text-base lg:text-sm xl:text-base bg-gray-800 text-white rounded-xl font-semibold shadow-md hover:bg-gray-700 transition-all dark:bg-blue-800 dark:hover:bg-blue-700"
    >
      Ingresar
    </a>

    <a 
      href="/register" 
      class="px-3 py-2 md:px-4 md:py-2 lg:px-5 lg:py-2 text-sm md:text-base lg:text-sm xl:text-base bg-orange-600 text-white rounded-xl font-semibold shadow-md hover:bg-orange-700 transition-all"
    >
      Registrarse
    </a>
  </div>
</div>


    <!-- Mobile Menu Button -->
    <button id="menu-toggle" class=" md:hidden text-slate-800 dark:text-white focus:outline-none">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" height="24px" viewBox="0 0 24 24" width="24px" fill="currentColor">
        <path d="M0 0h24v24H0V0z" fill="none"/><path d="M3 18h18v-2H3v2zm0-5h18v-2H3v2zm0-7v2h18V6H3z"/>
      </svg>
    </button>
  </div>

  <!-- Mobile Menu -->
  <nav id="mobile-menu" class="md:hidden hidden flex-col gap-4 px-6 pt-4 pb-2 bg-stone-50 dark:bg-slate-800">
    {menuItems.map(item => (
      <a 
        href={item.href} 
        class="block py-2 text-gray-700 hover:text-orange-700 dark:text-slate-50 dark:hover:text-blue-500"
      >
        {item.label}
      </a>
    ))}

      <!-- Botones -->
    <div class="flex flex-col gap-3 mt-4">
      <div class=" flex justify-center gap-4 mr-2">
                <a 
                    href="/login" 
                    class=" px-4 py-2 bg-gray-800 text-white rounded-xl font-semibold shadow-md hover:bg-gray-700 transition-all dark:bg-blue-800 dark:hover:bg-blue-700">
                    Ingresar
                </a>

                <a 
                    href="/register" 
                    class="px-4 py-2 bg-orange-600 text-white rounded-xl font-semibold shadow-md hover:bg-orange-700 transition-all">
                    Registrarse
                </a>
            </div>
    </div>
  </nav>

  <script type="module" is:inline>
    const toggle = document.getElementById('menu-toggle');
    const menu = document.getElementById('mobile-menu');

    toggle.addEventListener('click', () => {
      menu.classList.toggle('hidden');
    });
  </script>
</header>

